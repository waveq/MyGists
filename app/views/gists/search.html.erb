  <% form_tag projects_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :snippet => nil %>
  </p>
<% end %>


<div class="table">
  <tbody>
    <% @gists.each do |gist| %>
      <tr>

       <td><%= raw Pygments.highlight(gist.snippet.length > 30 ? gist.snippet[0,90] + "" : gist.snippet, lexer: gist.lang) %></td> 
        <td><%= gist.lang %></td>
        <td><%= gist.description %></td>

        <td><%= link_to 'Pokaż', gist, :class => "btn btn-large btn-success" %></td>
        <td><%= link_to 'Edytuj', edit_gist_path(gist), :class => "btn btn-large btn-warning" %></td>
        <td><%= link_to 'Usuń', gist, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-large btn-danger" %></td>
        
      </tr>
    <% end %>
  </tbody>
</div>
</table>

<hr />
<%= link_to 'Wróć', gists_path, :class => "btn btn-large btn-primary" %>
</div>


